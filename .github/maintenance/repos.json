{
  "$schema": "./repos.schema.json",
  "common": {
    "labels": [
      {
        "name": "kind/bug",
        "color": "d73a4a",
        "description": "Something isn't working as expected"
      },
      {
        "name": "kind/feature",
        "color": "a2eeef",
        "description": "New capability or functionality"
      },
      {
        "name": "kind/enhancement",
        "color": "84b6eb",
        "description": "Improvement to existing functionality"
      },
      {
        "name": "kind/refactor",
        "color": "fbca04",
        "description": "Code restructuring without behavior change"
      },
      {
        "name": "kind/documentation",
        "color": "0075ca",
        "description": "Documentation improvements"
      },
      {
        "name": "kind/security",
        "color": "b60205",
        "description": "Security-related issue or fix"
      },
      {
        "name": "kind/performance",
        "color": "d4c5f9",
        "description": "Performance improvements or issues"
      },
      {
        "name": "kind/breaking-change",
        "color": "e99695",
        "description": "Introduces breaking changes"
      },

      {
        "name": "priority/critical",
        "color": "b60205",
        "description": "Requires immediate attention"
      },
      {
        "name": "priority/high",
        "color": "d93f0b",
        "description": "Should be addressed soon"
      },
      {
        "name": "priority/medium",
        "color": "fbca04",
        "description": "Normal priority"
      },
      {
        "name": "priority/low",
        "color": "0e8a16",
        "description": "Nice to have, no urgency"
      },

      {
        "name": "effort/small",
        "color": "c2e0c6",
        "description": "Quick fix, hours of work"
      },
      {
        "name": "effort/medium",
        "color": "fef2c0",
        "description": "Few days of work"
      },
      {
        "name": "effort/large",
        "color": "f9d0c4",
        "description": "Week+ of work, may need breakdown"
      },

      {
        "name": "status/blocked",
        "color": "d73a4a",
        "description": "Cannot proceed due to external dependency"
      },
      {
        "name": "status/needs-triage",
        "color": "fbca04",
        "description": "Requires maintainer review and categorization"
      },
      {
        "name": "status/needs-info",
        "color": "fbca04",
        "description": "Waiting for more information from reporter"
      },
      {
        "name": "status/needs-design",
        "color": "c5def5",
        "description": "Requires design/architecture discussion"
      },
      {
        "name": "status/in-progress",
        "color": "0e8a16",
        "description": "Actively being worked on"
      },
      {
        "name": "status/ready-for-review",
        "color": "6f42c1",
        "description": "PR ready for code review"
      },

      {
        "name": "resolution/duplicate",
        "color": "cfd3d7",
        "description": "Duplicate of another issue"
      },
      {
        "name": "resolution/wontfix",
        "color": "cfd3d7",
        "description": "Will not be addressed"
      },
      {
        "name": "resolution/invalid",
        "color": "cfd3d7",
        "description": "Not a valid issue"
      },
      {
        "name": "resolution/by-design",
        "color": "cfd3d7",
        "description": "Working as intended"
      },

      {
        "name": "good-first-issue",
        "color": "7057ff",
        "description": "Good for newcomers"
      },
      {
        "name": "help-wanted",
        "color": "008672",
        "description": "Extra attention needed"
      },
      {
        "name": "hacktoberfest",
        "color": "ff7518",
        "description": "Hacktoberfest eligible"
      },

      {
        "name": "area/api",
        "color": "c5def5",
        "description": "REST/gRPC API layer"
      },
      {
        "name": "area/auth",
        "color": "c5def5",
        "description": "Authentication and authorization"
      },
      {
        "name": "area/config",
        "color": "c5def5",
        "description": "Configuration handling"
      },
      {
        "name": "area/docs",
        "color": "c5def5",
        "description": "Documentation"
      },
      {
        "name": "area/ci",
        "color": "c5def5",
        "description": "CI/CD pipelines and GitHub Actions"
      },
      {
        "name": "area/deps",
        "color": "c5def5",
        "description": "Dependencies and Dependabot updates"
      },
      {
        "name": "area/testing",
        "color": "c5def5",
        "description": "Test infrastructure and coverage"
      },

      {
        "name": "changelog/added",
        "color": "0e8a16",
        "description": "New features for release notes"
      },
      {
        "name": "changelog/changed",
        "color": "fbca04",
        "description": "Changes in existing functionality"
      },
      {
        "name": "changelog/deprecated",
        "color": "fef2c0",
        "description": "Soon-to-be removed features"
      },
      {
        "name": "changelog/removed",
        "color": "d73a4a",
        "description": "Removed features"
      },
      {
        "name": "changelog/fixed",
        "color": "c5def5",
        "description": "Bug fixes"
      },
      {
        "name": "changelog/security",
        "color": "b60205",
        "description": "Security fixes"
      },
      {
        "name": "changelog/skip",
        "color": "cfd3d7",
        "description": "Do not include in changelog"
      }
    ],
    "topics": [
      "inferadb",
      "authorization",
      "access-control",
      "permissions",
      "rebac",
      "zanzibar",
      "fine-grained-access-control"
    ],
    "settings": {
      "delete_branch_on_merge": true,
      "allow_merge_commit": false,
      "allow_rebase_merge": true,
      "allow_squash_merge": true,
      "allow_auto_merge": true,
      "allow_forking": true,
      "allow_update_branch": true,
      "enable_issues": true,
      "enable_wiki": false,
      "enable_projects": false,
      "enable_discussions": false,
      "enable_secret_scanning": true,
      "enable_secret_scanning_push_protection": true,
      "enable_secret_scanning_validity_checks": true,
      "enable_secret_scanning_non_provider_patterns": true,
      "enable_secret_scanning_ai_detection": true,
      "web_commit_signoff_required": true,
      "enable_vulnerability_alerts": true,
      "enable_automated_security_fixes": true,
      "enable_private_vulnerability_reporting": true,
      "squash_merge_commit_title": "PR_TITLE",
      "squash_merge_commit_message": "BLANK"
    },
    "dependabot": {
      "schedule": {
        "interval": "weekly",
        "day": "monday",
        "time": "09:00",
        "timezone": "Etc/UTC"
      },
      "open_pull_requests_limit": 5,
      "commit_message": {
        "prefix": "deps",
        "include": "scope"
      },
      "labels": ["area/deps"],
      "groups": {
        "all-dependencies": {
          "patterns": ["*"]
        }
      }
    }
  },

